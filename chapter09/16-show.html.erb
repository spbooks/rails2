<h2>
  <span id="vote_score">
    Score: <%= @story.votes.size %>
  </span>
  <%= @story.name %>
</h2>
<ul id="vote_history">
  <% if @story.votes.empty? %>
    <em>No shoves yet!</em>
  <% else %>
    <%= render :partial => 'votes/vote',
               :collection => @story.votes.latest %>
  <% end %>
</ul>
<p class="submitted_by">
  Submitted by: 
  <span><%= @story.user.login %></span>
</p>
<p>
  <%= link_to @story.link, @story.link %>
</p>
<% if logged_in? %>
<div id="vote_form">
  <% form_remote_tag :url => story_votes_path(@story) do %>
    <%= submit_tag 'shove it' %>
  <% end %>
</div>
<% else %>
  <p>
    <em>
      You would be able to vote for this story if you were
      <%= link_to 'logged in', new_session_path %>!
    </em>
  </p>
<% end %>